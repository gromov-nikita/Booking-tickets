<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.gromov.models.entity.TransportEntity" table="transport" schema="booking_tickets">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="number">
            <column name="number" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="amountOfSeats">
            <column name="amountOfSeats" sql-type="int"/>
        </property>
        <set name="tripsById" inverse="true">
            <key>
                <column name="transportID"/>
            </key>
            <one-to-many not-found="ignore" class="com.gromov.models.entity.TripEntity"/>
        </set>
    </class>
</hibernate-mapping>