<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.gromov.models.entity.CityEntity" table="city" schema="booking_tickets">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="countryId">
            <column name="countryID" sql-type="int"/>
        </property>
        <many-to-one name="countryByCountryId" class="com.gromov.models.entity.CountryEntity">
            <column name="countryID"/>
        </many-to-one>
        <set name="pointsById" inverse="true">
            <key>
                <column name="cityFromID"/>
            </key>
            <one-to-many not-found="ignore" class="com.gromov.models.entity.PointEntity"/>
        </set>
        <set name="pointsById_0" inverse="true">
            <key>
                <column name="cityToID"/>
            </key>
            <one-to-many not-found="ignore" class="com.gromov.models.entity.PointEntity"/>
        </set>
    </class>
</hibernate-mapping>