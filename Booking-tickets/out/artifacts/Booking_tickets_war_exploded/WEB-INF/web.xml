<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>getAvailableTrips</servlet-name>
        <servlet-class>com.gromov.servlet.GetAvailableTrips</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAvailableTrips</servlet-name>
        <url-pattern>/trips</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogInPage</servlet-name>
        <jsp-file>/logInPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogInPage</servlet-name>
        <url-pattern>/logInPage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignUpPage</servlet-name>
        <jsp-file>/signUpPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpPage</servlet-name>
        <url-pattern>/signUpPage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogInHandler</servlet-name>
        <servlet-class>com.gromov.servlet.LogInHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogInHandler</servlet-name>
        <url-pattern>/logInH</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignUpHandler</servlet-name>
        <servlet-class>com.gromov.servlet.SignUpHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpHandler</servlet-name>
        <url-pattern>/signUpH</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MenuFull</servlet-name>
        <jsp-file>/menuFull.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>MenuFull</servlet-name>
        <url-pattern>/menuF</url-pattern>
    </servlet-mapping>
</web-app>