<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.gromov.models.entity.PointEntity" table="point" schema="booking_tickets">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="tripId">
            <column name="tripID" sql-type="int"/>
        </property>
        <property name="cityFromId">
            <column name="cityFromID" sql-type="int"/>
        </property>
        <property name="cityToId">
            <column name="cityToID" sql-type="int"/>
        </property>
        <many-to-one name="tripByTripId" class="com.gromov.models.entity.TripEntity">
            <column name="tripID"/>
        </many-to-one>
        <many-to-one name="cityByCityFromId" class="com.gromov.models.entity.CityEntity">
            <column name="cityFromID"/>
        </many-to-one>
        <many-to-one name="cityByCityToId" class="com.gromov.models.entity.CityEntity">
            <column name="cityToID"/>
        </many-to-one>
    </class>
</hibernate-mapping>