<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.gromov.models.entity.OrderEntity" table="order" schema="booking_tickets">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="userId">
            <column name="userID" sql-type="int"/>
        </property>
        <property name="tripId">
            <column name="tripID" sql-type="int"/>
        </property>
        <property name="seat">
            <column name="seat" sql-type="int"/>
        </property>
        <property name="price">
            <column name="price" sql-type="double" precision="-1"/>
        </property>
        <property name="status">
            <column name="status" sql-type="enum('canceled', 'actively', 'deleted')"/>
        </property>
        <many-to-one name="userByUserId" class="com.gromov.models.entity.UserEntity">
            <column name="userID"/>
        </many-to-one>
        <many-to-one name="tripByTripId" class="com.gromov.models.entity.TripEntity">
            <column name="tripID"/>
        </many-to-one>
        <set name="commentsById" inverse="true">
            <key>
                <column name="orderID"/>
            </key>
            <one-to-many not-found="ignore" class="com.gromov.models.entity.CommentEntity"/>
        </set>
    </class>

    <query name="getOrersByUserID">
        <![CDATA[from OrderEntity as o where o.userId = userId]]>
    </query>

</hibernate-mapping>